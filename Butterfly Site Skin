/* changes the text color of the visited links*/
a:visited,
div#header.module h4 {
  color: #525252;
}

/* chnages the color of links when hovered over */
a:hover {
  color: #a3cdd0;
}

/* changes the colour of the visited links when hovered over */
a:visited:hover {
  color: #b8b8b8;
}


/* this edits the opacity of the white background of the statistics chart*/
#stat_chart svg rect:first-of-type {
  opacity: 0%;
}

/* changes the red bars in the statistics chart to aqua (change hue-rotation to edit color) */
#stat_chart g[clip-path^=url] > g:nth-of-type(2) rect,
#stat_chart svg g:nth-of-type(2) > g rect:last-of-type,
#stat_chart g[clip-path^=url] > g:nth-of-type(2) rect:first-of-type {
  filter: hue-rotate(190deg);
  opacity: 100% !important;
}

/* changes the color of the statistics chart bars when hovered over */
#stat_chart g[clip-path^=url] > g:nth-of-type(2) rect:hover {
  filter: hue-rotate(185deg);
}
